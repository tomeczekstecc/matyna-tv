generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

enum CategoryEnum {
  Uroda
  Gry
  Wyjazdy
  Zwierzeta
  Moda
  Inne
}

enum Role {
  ADMIN
  USER
}

model Category {
  id       CategoryEnum @id
  BlogPost BlogPost[]
}

